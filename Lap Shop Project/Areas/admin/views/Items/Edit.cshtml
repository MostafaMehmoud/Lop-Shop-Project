<div class="col-12 grid-margin stretch-card">
    <form class="col-12 grid-margin stretch-card" asp-area="Admin" method="post" enctype="multipart/form-data" asp-controller="Items" asp-action="Save" role="form">
        <div class="col-md-6 grid-margin stretch-card">
            <div style="background-color:#eee" class="card">
                <div class="card-body">
                    <h4 class="card-title">Basic Data</h4>
                    <input asp-for="ItemId" type="hidden" />
                    <input asp-for="CreatedBy" type="hidden" />
                    <input asp-for="CreatedDate" type="hidden" />
                    <input asp-for="CurrentState" type="hidden" />
                    <input asp-for="ImageName" type="hidden" />
                    <div class=" form-group">
                        <label class="sr-only" for="inlineFormInputName2">@ResAdmin.lblItemName</label>
                        <input asp-for="ItemName" type="text" class="form-control mb-2 mr-sm-2"  placeholder="@ResAdmin.lblItemName">
                        <span asp-validation-for="ItemName" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect2">@ResAdmin.lblCategoryName</label>
                        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.lisCategories,"CategoryId","CategoryName"))" class="form-control form-control-lg" id="exampleFormControlSelect1">
                        </select>

                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect2">@ResAdmin.lblos</label>
                        <select asp-for="OsId" asp-items="@(new SelectList(ViewBag.lisOs,"OsId","OsName"))" class="form-control form-control-lg" id="exampleFormControlSelect1">
                        </select>
                       
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect3">@ResAdmin.lblItemType</label>
                        <select asp-for="ItemTypeId" asp-items="@(new SelectList(ViewBag.lisItemType,"ItemTypeId","ItemTypeName"))" class="form-control form-control-lg" id="exampleFormControlSelect1">
                        </select>
                        <span asp-validation-for="ItemTypeId"></span>
                    </div>
                    <div class=" form-group">
                        <label class="sr-only" for="inlineFormInputName2">@ResAdmin.lblPrice</label>
                        <input asp-for="SalesPrice" type="number" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="@ResAdmin.lblPrice">
                        <span asp-validation-for="SalesPrice" class="danger"></span>
                    </div>
                    <div class=" form-group">
                        <label class="sr-only" for="inlineFormInputName2">@ResAdmin.lblPurchasePrice</label>
                        <input asp-for="PurchasePrice" type="number" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="@ResAdmin.lblPurchasePrice">
                        <span asp-validation-for="PurchasePrice" class="danger"></span>
                    </div>
                    <div class=" form-group">
                        <label class="sr-only" for="inlineFormInputName2">@ResAdmin.lblWeight</label>
                        <input asp-for="Weight" type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="@ResAdmin.lblWeight">
                        <span asp-validation-for="Weight" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputUsername1">
                            @ResAdmin.LblImage
                        </label>
                        <input asp-for="ImageName" type="file" name="Files" multiple
                               class="form-control" placeholder="@ResAdmin.LblImage"
                               onchange="Upload.UploadDefaultImg(event)" accept=".jpg, .jpeg, .png, ,.gif">

                    </div>
                   
                </div>
            </div>
        </div>
        <div class="col-md-6 grid-margin stretch-card">
            <div style="background-color:#eee" class="card">
                <div class="card-body">
                    <h4 class="card-title">Advenced Data</h4>
                   
                    <div class="form-group">
                        <label class="sr-only" for="inlineFormInputName2">@ResAdmin.lblGpu</label>
                        <input asp-for="Gpu" type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="@ResAdmin.lblGpu">
                        <span asp-validation-for="Gpu" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="inlineFormInputName2">@ResAdmin.lblProcessor</label>
                        <input asp-for="Processor" type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="@ResAdmin.lblProcessor">
                        <span asp-validation-for="Processor" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="inlineFormInputName2">@ResAdmin.lblHardDisk</label>
                        <input asp-for="HardDisk" type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="@ResAdmin.lblHardDisk">
                        <span asp-validation-for="HardDisk" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="inlineFormInputName2">@ResAdmin.lblRamSize</label>
                        <input asp-for="RamSize" type="number" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="@ResAdmin.lblRamSize">
                        <span asp-validation-for="RamSize" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="inlineFormInputName2">@ResAdmin.lblScreenReslution</label>
                        <input asp-for="ScreenReslution" type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="@ResAdmin.lblScreenReslution">
                        <span asp-validation-for="ScreenReslution" class="danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="inlineFormInputName2">@ResAdmin.lblScreenSize</label>
                        <input asp-for="ScreenSize" type="text" class="form-control mb-2 mr-sm-2" id="inlineFormInputName2" placeholder="Enter Category @ResAdmin.lblScreenSize">
                        <span asp-validation-for="ScreenSize" class="danger"></span>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <span id="tbImgName"></span>
                            <div id="tbImgSrc">
                                <img src="/Uploads/Items/@Model.ImageName" style="width:95%; height300px;" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input value="Submit" type="submit" class="btn btn-gradient-primary mb-2" />
                    </div>
            </div>
        </div>
            
      </form>
</div>
